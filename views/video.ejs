<% include header.ejs %>
<div style="margin:auto">
	
	<div class="container-fluid">
		<div class="row">
		 	<div class="video" style="margin-top:40px">
				<div class="video-wrapper">
					<iframe src="https://www.youtube.com/embed/<%= videoData._id %>?showinfo=0" frameborder="0" allowfullscreen></iframe>
				</div>
				<div class="voting <%= videoData._id %>">
				<div class="outcome">
					<% if (voted) { %>
					
						<small>USER VOTES</small>
						<div class="progress" style="margin-top:15px">
		                  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"  style="width:<%- videoData.bronzeVotes/videoData.totalVotes * 100 %>%"></div>
		                </div>
		                <div class="vote-distribution clearfix">
							<div class="vote-recap">
							<h4 class="bronze"><%= videoData.bronzeVotes %></h4>
							Bronze 
							</div>
							<div class="vote-recap">
							<h4 class="challenger"><%= videoData.challengerVotes %></h4>
								Challenger
							</div>
						</div>
						<% if(voted === videoData.league){ %>
							<span class="success">You voted correctly! It was indeed  <img src="/img/<%= videoData.league %>.png" alt="<%= videoData.league %>" /></span>
						<% } else { %>
							<span class="failure"> Wrong! It was actually a <img src="/img/<%= videoData.league %>.png" alt="<%= videoData.league %>" /> play.</span>
						<% } %>
					
					<% } else { %>
					
					<img src="/img/bronze.png" alt="bronze" class="voter" data-id="<%= videoData._id %>" data-league="bronze"> OR <img src="/img/challenger.png" alt="challenger" data-id="<%= videoData._id %>" class="voter" data-league="challenger">
					<% } %>
					</div>
				</div>
				<div class="socialmedia">
				<a href="https://twitter.com/share" class="twitter-share-button"  data-text="Bronze or Challenger?">Tweet</a> 

				</div>
				<div class="comments">
					  <div id="disqus_thread"></div>
				</div>
			</div>
		</div>
	</div>
</div>

<% include scripts.ejs %>
<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'bronzeorchallenger'; // required: replace example with your forum shortname

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
